---
import Layout from "layouts/Layout.astro";
import { PortfolioPage } from "pageComponents/PortfolioPage/PortfolioPage";
import { fetchGlobalData, fetchImagesData, ITattooImage } from "shared/const/firebaseVariables";
import { getLangFromUrl } from "shared/lib/i18n/getLangFromUrl";
import type { IGlobalData } from "shared/types/IGlobalData";
import { PageWrapper } from "shared/ui/PageWrapper/PageWrapper";
import cave from "widgets/Main/const/dungeon.webp"

const language = getLangFromUrl(Astro.url)

const imagesData = await fetchImagesData() as ITattooImage[]
const globalData = await fetchGlobalData() as IGlobalData
const {sectionNames, buttons,formData ,layoutData, filtersData} = globalData
const { cta } = buttons[language]
---

<Layout image={cave}>
    <PageWrapper title={layoutData.navList[language][1].text} main={layoutData.navList[language][0].text}>
        <PortfolioPage 
        client:load
        formTitle={sectionNames[language].form} 
         formData={formData[language]}
         button={cta}
         globalFiltersData={filtersData}
         fetchedData={imagesData}
         language={language}
         />
    </PageWrapper>
</Layout>
