---
import { Header } from "widgets/Header"
import "./Layout.scss"
import { Footer } from "widgets/Footer/Footer";
import i18next from "i18next";
import type {LanguageType} from 'widgets/Header' //change
import { ILayoutData, fetchSectionData } from "shared/const/firebaseVariables";

const language =  i18next.language as LanguageType
const layoutData = await fetchSectionData(language, "layout",true) as ILayoutData;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap"
            rel="stylesheet"
        />
        <meta name="generator" content={Astro.generator} />
        <title>Leovink Tattoo</title>
    </head>
    <body>
        <Header client:load language={language} data={layoutData.navlist}/>
        <slot />
        <Footer data={layoutData.footer}/>
    </body>
</html>
